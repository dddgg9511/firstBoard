<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Board.noticeBoard.dao.MemberDAO">
	<insert id="save" parameterType="Board.noticeBoard.domain.Member">
		INSERT INTO MEMBER (
			member_id,
			member_password,
			member_name
		)
		VALUES (
			#{member_id},
			#{member_password},
			#{member_name}
		)
	</insert>
	
	<select id="findById" resultType="Board.noticeBoard.domain.Member">
		SELECT *
		FROM MEMBER
		WHERE member_id = #{pk}
	</select>
	
	<delete id="deleteAll">
		DELETE FROM MEMBER
	</delete>
	
	<select id="count" resultType="int">
		SELECT COUNT(*)
		FROM MEMBER
	</select>
	
	<select id="findAll" resultType="Board.noticeBoard.domain.Member">
		SELECT *
		FROM MEMBER
	</select>
		
	<delete id="deleteById">
		DELETE FROM MEMBER
		WHERE member_id = #{pk}
	</delete>
	
	<update id="update" parameterType="Board.noticeBoard.domain.Member">
		UPDATE MEMBER SET
		member_name = #{member_name}
		WHERE member_id = #{member_id}
	</update>
	
</mapper>